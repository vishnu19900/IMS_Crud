<div class="Table">
    <div class="card">
        <form class=" form-control" action="/Orders/OrderView">
            <label>Supplier_Name</label>
            @Html.DropDownList("SuppliersId",(List<SelectListItem>)ViewBag.SupplierBag);

            <label>ProductName</label>
            @Html.DropDownList("ProductId",(List<SelectListItem>)ViewBag.Products);
            <label>TextSearch</label>
            @Html.TextBox("TextSearch")
            <label>Orderdate</label>
            @Html.DropDownList("Month",(List<SelectListItem>)ViewBag.SelectedMonth)
            <div><input type="submit" value="search" /></div>
        </form>
    </div>
    <table class="container" width="100%" style="margin-top:20px;">

        <tr>
            <th>Id</th>
            <th>Supplier</th>
            <th>Product</th>
            <th>Mobile No</th>
            <th>Orderdate</th>
            <th>First</th>
            <th>Last</th>
            <th>Number Shipped</th>
            <th>OrderDate</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Supplier_Name</td>
                <td>@item.ProductName</td>
                <td>@item.MobileNo</td>
                <td>@item.OrderDate</td>
                <td>@item.First</td>
                <td>@item.Last</td>
                <td>@item.NumberShipped</td>
                <td>@item.OrderDate</td>
            </tr>
        }
    </table>
    <div class="card">
        <ul class="pagination">
            @{
                int totalpages = ViewBag.TotalPages;
                for (int i = 0; i <= totalpages; i++)
                {
                    <li>
                        @Html.ActionLink((i+1).ToString(),"OrderView",new {SuppliersId=0,ProductId=0, Month=0,TextSearch="", PageNumber=i })
                    </li>
                }
            }
        </ul>

    </div>
</div>